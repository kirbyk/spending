<h2>Transactions</h2>

<table class="table table-striped">
  <th>Date</th>
  <th>Name</th>
  <th>Amount</th>
  <% @transactions.each do |t| %>
    <tr>
      <td><%= t["date"] %></td>
      <% if t['data_source'] == 'venmo' %>
        <td><%= t["note"] %></td>
      <% else %>
        <td><%= t["name"] %></td>
      <% end %>
      <td><%= t["amount"] %></td>
    </tr>
  <% end %>
</table>
