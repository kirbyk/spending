<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Connect your Bank</h3>
  </div>
  <div class="panel-body">
    <%= form_tag("/mfa_save", method: "post") do %>
      <div class="form-group">
        <%= label_tag(:id_code, "Identification Code") %>
        <%= text_field_tag :id_code, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= submit_tag "Connect", class: 'btn btn-primary', id: 'bank-create-submit' %>
      </div>
    <% end %>
  </div>
