<!DOCTYPE html>
<html>
<head>
  <title>Spending</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if !current_user %>
    <div class="background-hero"><div class="shade"></div></div>
  <% else %>
    <div class="top peter-river"></div>
    <div class="top turquoise"></div>
    <div class="top nephritis"></div>
    <div class="top alizarin"></div>
    <div class="top orange"></div>
  <% end %>

  <div class="container">

  <% if current_user %>
    <%= render partial: 'layouts/navigation' %>
  <% end %>

    <%= yield %>
  </div>

</body>
</html>
